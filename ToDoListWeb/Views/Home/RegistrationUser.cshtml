@model ToDoList.Models.Users
@{
    ViewData["Title"] = "Registration Page";
}

<h2>Регистрация нового пользователя</h2>
<form method="post" asp-controller="Home" asp-action="CreateUser">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="UserName"></label><br />
        <input asp-for="UserName" />
    </div>
    <div>
        <label asp-for="UserPasswordHash"></label><br />
        <input asp-for="UserPasswordHash" />
        <span asp-validation-for="UserPasswordHash"></span>
    </div>
    <div>
        <input type="submit" value="Зарегистрироваться" />
    </div>
</form>